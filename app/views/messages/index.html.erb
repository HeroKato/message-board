<style>
  span.a { word-wrap: break-word; }
</style>


<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
  
  <div class="panel-body">
    <% @messages.each do |message| %>
    
    <span class="label label-info"><%= message.name %></span>
    <div class="form-block">
      <span class="a"><%= message.body %></span>
    </div>
      <br />
      <hr />
    <% end %>
  </div>
</div>

<br />

<div class="container">
  <%= form_for(@message) do |f| %>
    <div class="form-horizontal">
      <div class="form-group">
        <h4><label for="name" class="label label-default">名前</label></h4>
        <br />
        <div class="col-sm-4">
          <%= f.text_field :name, :class=>'form-control', :id=>'name', :placeholder=>'Name' %>
        </div>
        <br />
      </div>
      <br />
      <div class="form-group">
        <h4><label for="message" class="label label-default">内容</label></h4>
        <br />
        <div class="col-sm-6">
          <%= f.text_area :body, :class=>'form-control', :id=>'message', :cols=>"60", :rows=>"6", :placeholder=>'Message' %>
        </div>
        <br />
      </div>
      <br />
      <%= f.submit :class=>'btn btn-primary'%>
    </div>
  <% end %>
</div>
<br />
<br />