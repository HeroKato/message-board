<%= form_for(@message, html: {class: "form-horizontal"}) do |f| %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <label for="name-label" class="col-sm-1 control-label">名前:</label>
    <div class="col-sm-11">
      <%= f.text_field :name, :class=>'form-control', :id=>'name-label', :placeholder=>'Name' %>
    </div>
  </div>
  <div class="form-group">
    <label for="age-label" class="col-sm-1 control-label">年齢:</label>
    <div class="col-sm-11">
      <%= f.text_field :age, :class=>'form-control', :id=>'age-label', :placeholder=>'Age' %>
    </div>
  </div>
  <div class="form-group">
    <label for="message-content" class="col-sm-1 control-label">内容:</label>
    <div class="col-sm-11">
      <%= f.text_area :body, :class=>'form-control', :id=>'message-content', :placeholder=>'Message' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-1 col-sm-10">
      <%= f.submit :class=>'btn btn-sm btn-primary' %>
    </div>
  </div>
  
<% end %>